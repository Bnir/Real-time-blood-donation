<body>
    <%- include('components/navbar') %>
    
    <div class="others">
        <div class="popupContainer">
            <div class="left-side">
                <div class="headContent">
                    <h1>Emergency Blood Request</h1>
                </div>
                <div class="leftMainContent">
                    <p>Fill in the details below to request blood (Emergency) </p>
                    <label for="name">Your Name:</label>
                    <input type="text" placeholder="Your Name" name="name" id="name">
                    <label for="mobile">Mobile Number: </label>
                    <input type="number" placeholder="Your Phone" name="mobile" id="mobile">
                    <label for="bloodGroup">Blood Group: </label>
                    <select name="bloodGroup" id="bloodGroup" required>
                        <option value="" disabled selected>Select your blood group</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                </div>
            </div>
    
            <div class="right-side">
                <div class="headContent">
                    <h1>Select the Hospital</h1>
                </div>
                <div class="rightMainContent">
                    <label for="hospital">Hospital Name:</label>
                    <input type="text" placeholder="Type Hospital name to select" name="hospital" id="hospital">
                    <div class="mapContainer" id="map"></div>
                    <button id="submitRequest">Submit Request</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="overlay" id="popupOverlay">
        <div class="popup-box">
          <h2>Confirm Hospital</h2>
          <p>Are you sure you want to select <strong id="hospitalName">[Hospital Name]</strong>?</p>
          <button class="confirm-btn" onclick="confirmHospital()">Confirm</button>
          <button class="cancel-btn" onclick="closePopup()">Cancel</button>
        </div>
      </div>

    <script src="js/sos.js"></script>
