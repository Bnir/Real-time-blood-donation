<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="css/signup.css">
    <link rel="stylesheet" href="css/popup.css">
    <style>
        .popup {
  position: fixed;
  top: -100px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgb(71, 70, 69);
  color: #f44336;
  padding: 15px 30px;
  border-radius: 5px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  z-index: 1000;
  transition: all 0.5s ease-in-out; 
}

/* Visible state */
.popup.show {
  top: 20px;
}

    </style>
</head>
<body>
    <div class="headerContent">
        <div class="headingItem">
            <h1>SIGN IN PAGE</h1>
        </div>
        <div class="quote">
            <p>Your blood donation is a gift straight from the heart &#9829;</p>
        </div>
    </div>

    <div class="mainContent">
        <div class="mainForm">
            <div class="formContainer signinFormContainer">
                <div class="logo">
                    <img src="https://png.pngtree.com/png-clipart/20230426/original/pngtree-blood-drop-blood-red-cartoon-illustration-png-image_9103018.png" alt="Blood Drop" class="logo-img">
                </div>
                <h1>Sign in</h1>
                <form action="/login" method="post" id="logFormer">
                    <label for="email">Email</label>
                    <input type="email" id="emailID" name="email" placeholder="me@example.com" required>
                    <label for="password">Password</label>
                    <input type="password" id="passwordID" name="password" placeholder="********" required>
                    <button type="submit" class="button">Sign in</button>
                </form>
                <div class="formLinks">
                    <p>Don't have an account? <a href="/signup">Create One</a></p>
                    <button class="button" onclick="flipForm()">Forgot Password?</button>
                </div>
            </div>

            <div class="formContainer resetFormContainer">
                <div class="logo">
                    <img src="https://png.pngtree.com/png-clipart/20230426/original/pngtree-blood-drop-blood-red-cartoon-illustration-png-image_9103018.png" alt="Blood Drop" class="logo-img">
                </div>
                <h1>Reset Password</h1>
                <form action="/forgotpass" method="post" id="forgotpass">
                    <label for="email2">Email</label>
                    <input type="email" id="email2" name="email" placeholder="me@example.com" required>
                    <button type="submit" class="button">Reset Password</button>
                </form>
                <button class="button" onclick="flipForm()">Back to Sign In</button>
            </div>
        </div>
    </div>


    <div id="loadingOverlay" class="loading-overlay">
        <div class="loadContainer">
            <div class="spinner"></div>
            <!-- Getting all the donors in one place... -->
             <p>Oboarding you to our Family ðŸ˜Š</p>
             <div class="qod" id="qod"></div>
        </div>
        
    </div>

    <% if (error !== "") { %>
        <div id="error-popup2" class="popup">
          <span id="popup-message2"><%= error %></span>
        </div>
      <% } %>
      

    <%- include('components/popup') %>
    
    <%- include("components/bottom-bar") %>

    <script>
  document.addEventListener("DOMContentLoaded", function() {
    const errorPopup = document.getElementById('error-popup2');
    
    // Check if the popup element exists (only if error exists)
    if (errorPopup) {
      errorPopup.classList.add('show');

      setTimeout(() => {
        errorPopup.classList.remove('show');
      }, 4000); // 4 seconds timeout to hide the popup
    }
  });


        const errDiv = document.getElementById('error-popup');
        const forgot = document.getElementById('forgotpass');
        const loader = document.getElementById('loadingOverlay');

        forgot.addEventListener('submit', (e)=>{
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            const formObj = Object.fromEntries(formData.entries());
            const email = formObj.email;
            loader.style.display = 'flex';
            fetch('/forgot-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    email: email
                })
            })    
                .then(res => res.json())
                .then(data => {
                    console.log(data);
                    loader.style.display = 'none';
                    if(data.error){
                        errDiv.style.display = 'flex';
                        errDiv.querySelector('p').textContent = data.error;
                    } else {
                        errDiv.style.display = 'none';
                        alert('Password reset link sent to your email');
                    }
                })
            
        })

        document.getElementById('logFormer').addEventListener('submit', (event) => {
            // Prevent default form submission
            event.preventDefault();
            
            // Get email and password values
            const email = document.getElementById('emailID').value;
            const pass = document.getElementById('passwordID').value;
    
            // Send the email to the backend to fetch the username
            fetch('/getUsername', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email })
            })
            .then((res) => res.json())  // Assuming you send JSON from the server
            .then((data) => {
                const username = data.username; // assuming server responds with the username
                console.log(username);
                console.log("ihe2heiqhidhqidhqaihdquia");
                // Save session if available in Android
                saveSessionInAndroid(username, email);
    
                // Now send the login request with email and password
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email, password: pass })
            })
            .then((res) => {
                if (res.redirected) {
                    window.location.href = res.url; // Redirect to the specified URL
                } else {
                    // Handle unsuccessful login
                }
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });
    });
    
        function saveSessionInAndroid(username, email) {
            console.log("LDLDLJLJDFLASJLOOOOOOOOOO");
            if (window.Android) {
                window.Android.saveUserSession(username, email);
            } else {
                console.log("Android interface not available.");
            }
        }
    
        // Adjusting form height dynamically
        const div1 = document.querySelector('.signinFormContainer');
        const div2 = document.querySelector('.resetFormContainer');
        const resizeObserver = new ResizeObserver(() => {
            div2.style.height = div1.offsetHeight + 'px';
        });
        resizeObserver.observe(div1);
    </script>
    
</body>
</html>
