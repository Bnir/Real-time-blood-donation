<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="css/signup.css">
</head>
<body>
    <div class="headerContent">
        <div class="headingItem">
            <h1>SIGN IN PAGE</h1>
        </div>
        <div class="quote">
            <p>Your blood donation is a gift straight from the heart &#9829;</p>
        </div>
    </div>

    <div class="mainContent">
        <div class="mainForm">
            <div class="formContainer signinFormContainer">
                <div class="logo">
                    <img src="https://png.pngtree.com/png-clipart/20230426/original/pngtree-blood-drop-blood-red-cartoon-illustration-png-image_9103018.png" alt="Blood Drop" class="logo-img">
                </div>
                <h1>Sign in</h1>
                <form action="/login" method="post" id="logFormer">
                    <label for="email">Email</label>
                    <input type="email" id="emailID" name="email" placeholder="me@example.com" required>
                    <label for="password">Password</label>
                    <input type="password" id="passwordID" name="password" placeholder="********" required>
                    <button type="submit" class="button">Sign in</button>
                </form>
                <div class="formLinks">
                    <p>Don't have an account? <a href="/signup">Create One</a></p>
                    <button class="button" onclick="flipForm()">Forgot Password?</button>
                </div>
            </div>

            <div class="formContainer resetFormContainer">
                <div class="logo">
                    <img src="https://png.pngtree.com/png-clipart/20230426/original/pngtree-blood-drop-blood-red-cartoon-illustration-png-image_9103018.png" alt="Blood Drop" class="logo-img">
                </div>
                <h1>Reset Password</h1>
                <form action="/forgotpass" method="post">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="me@example.com" required>
                    <button type="submit" class="button">Reset Password</button>
                </form>
                <button class="button" onclick="flipForm()">Back to Sign In</button>
            </div>
        </div>
    </div>

    <%- include("components/bottom-bar") %>


    <script>
        document.getElementById('logFormer').addEventListener('submit', (event) => {
            // Prevent default form submission
            event.preventDefault();
            
            // Get email and password values
            const email = document.getElementById('emailID').value;
            const pass = document.getElementById('passwordID').value;
    
            // Send the email to the backend to fetch the username
            fetch('/getUsername', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email })
            })
            .then((res) => res.json())  // Assuming you send JSON from the server
            .then((data) => {
                const username = data.username; // assuming server responds with the username
                console.log(username);
                console.log("ihe2heiqhidhqidhqaihdquia");
                // Save session if available in Android
                saveSessionInAndroid(username, email);
    
                // Now send the login request with email and password
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email, password: pass })
            })
            .then((res) => {
                if (res.redirected) {
                    window.location.href = res.url; // Redirect to the specified URL
                } else {
                    // Handle unsuccessful login
                }
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        });
    });
    
        function saveSessionInAndroid(username, email) {
            console.log("LDLDLJLJDFLASJLOOOOOOOOOO");
            if (window.Android) {
                window.Android.saveUserSession(username, email);
            } else {
                console.log("Android interface not available.");
            }
        }
    
        // Adjusting form height dynamically
        const div1 = document.querySelector('.signinFormContainer');
        const div2 = document.querySelector('.resetFormContainer');
        const resizeObserver = new ResizeObserver(() => {
            div2.style.height = div1.offsetHeight + 'px';
        });
        resizeObserver.observe(div1);
    </script>
    
</body>
</html>
